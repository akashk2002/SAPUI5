<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    
    <Popover title="Supplier  Informations" showHeader="true" placement="Auto" id="supplierInformations">
        <content>
        
        <VBox class="popover">
        
                <HBox>
                    <Label text="Company Name:"/>
                    <Text text="{SuplierModel>/Supplier/CompanyName}"  id="1"/>
                </HBox>
            
                <HBox>
                    <Label text="Address:"/>
                    <Text text="{SuplierModel>/Supplier/Address}" id="2"/>
                </HBox>
           
                <HBox>
                    <Label text="City:"/>
                    <Text text="{SuplierModel>/Supplier/City}" id="3"/>
                </HBox>

                <HBox>
                    <Label text="Phone:"/>
                    <Text text="{SuplierModel>/Supplier/Phone}" id="4"/>
                </HBox>
           
            <Button text="Close" press="onClosePopover4"/>
        
        </VBox>
        
        </content>
          
   </Popover>
</core:FragmentDefinition>