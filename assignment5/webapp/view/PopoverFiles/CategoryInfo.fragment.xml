<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    
    <Popover title="Category  Informations" showHeader="true" placement="Auto" id="categoryInformations">
        <content>
        
        <VBox class="popover">
        
                <HBox>
                    <Label text="Category Id:"/>
                    <Text text="{CategoryModel>/Category/CategoryID}"  id="categoryID"/>
                </HBox>
            
                <HBox>
                    <Label text="Category Name:"/>
                    <Text text="{CategoryModel>/Category/CategoryName}" id="categoryName"/>
                </HBox>
           
                <HBox>
                    <Label text="Description:"/>
                    <Text text="{CategoryModel>/Category/Description}" id="description"/>
                </HBox>

                
           
            <Button text="Close" press="onClosePopoverCategory"/>
        
        </VBox>
        
        </content>
          
   </Popover>
</core:FragmentDefinition>