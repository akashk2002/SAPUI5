<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
    
    <Popover title="Customer Informations" showHeader="true" placement="Auto" id="customerInformations">
        <content>
        
        <VBox class="popover">
        
                <HBox>
                    <Label text="Company Name:"/>
                    <Text text="{CustomerModel>/Customer/CompanyName}"  id="1"/>
                </HBox>
            
                <HBox>
                    <Label text="Address:"/>
                    <Text text="{CustomerModel>/Customer/Address}" id="2"/>
                </HBox>
           
                <HBox>
                    <Label text="City:"/>
                    <Text text="{CustomerModel>/Customer/City}" id="3"/>
                </HBox>
           
            <Button text="Close" press="onClosePopover"/>
        
        </VBox>
        
        </content>
          
   </Popover>
</core:FragmentDefinition>