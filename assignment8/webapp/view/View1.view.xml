<mvc:View
    controllerName="assignment8.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <VBox height="100%" width="100%">
        <l:Splitter height="100%" width="100%">
            <l:contentAreas>
                <VBox>
                    <SearchField width="100%" placeholder="Search Employees" search="onSearch">
                        <layoutData>
                            <l:SplitterLayoutData size="300px" />
                        </layoutData>
                    </SearchField>
                    <HBox>
                        <Label id="countLabel" text="Count: 0" />
                        <Button text="Sort by First Name" press="onSort" />
                    </HBox>
                    <ScrollContainer height="100%" width="100%" vertical="true">
                        <List id="employeeList" items="{/Employees}">
                            <StandardListItem title="{FirstName} {LastName}" description="{Title}" />
                        </List>
                    </ScrollContainer>
                </VBox>
                <Button width="100%" text="Content 2">
                    <layoutData>
                        <l:SplitterLayoutData size="auto" />
                    </layoutData>
                </Button>
                <Button width="100%" text="Content 3">
                    <layoutData>
                        <l:SplitterLayoutData size="30%" minSize="200px" />
                    </layoutData>
                </Button>
            </l:contentAreas>
        </l:Splitter>
        <Toolbar>
            <ToolbarSpacer/>
            <Button text="Employee"/>
            <ToolbarSpacer/>
            <Button text="Customer"/>
            <ToolbarSpacer/>
            <Button text="Product"/>
            <ToolbarSpacer/>
            <Button text="Supplier"/>
            <ToolbarSpacer/>
        </Toolbar>
    </VBox>
</mvc:View>