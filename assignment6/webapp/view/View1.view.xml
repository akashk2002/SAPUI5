<mvc:View controllerName="assignment6.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page title="Products">
        <ScrollContainer height="100%" vertical="true">
            <Table id="idProductsTable"
                inset="false"
                items="{
                    path: '/Products',
                    sorter: {
                        path: 'name'
                    }
                }">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="Products" level="H2"/>
                            <ToolbarSpacer />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <infoToolbar>
                    <OverflowToolbar>
                        <Label text="Wide range of available products"/>
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Product" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Price" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <ObjectIdentifier title="{name}" text="{brand}"/>
                            <VBox alignItems="End">
                                <Image src="{photo}" width="100px" height="100px" />
                                <ObjectNumber number="{price}" unit="{currency}" />
                                <ObjectStatus text="{availability}" state="{path: 'availability', formatter: '.formatter.formatAvailabilityState'}" />
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </Page>
</mvc:View>